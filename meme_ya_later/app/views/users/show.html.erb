<p id="notice"><%= notice %></p>

<div class="container text-center">
  <div style="color: #0d6efd">

<h1><%=@user.name%></h1>
  </div>

   <%if current_user == @user%>
     <%= button_to 'Post Meme', new_meme_path, method: :get %>
     <%=button_to "Update Account Information", edit_user_path, method: 'get'%>
     <%end%>
</div>
<% @user.memes.order(created_at: :desc).each do |meme| %>
  <h2><%= link_to meme_path(meme) do %></h2>
  <% if meme.url.present? %>
    <div class="mt-4">
    <img src="<%= meme.url%>" alt="" class="rounded mx-auto d-block" style="width:40%">
    </div>
  <% else %>
  <%= meme.file %>
  <% end %>
<% end %>
<%end%>





